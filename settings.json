{
    "git.ignoreMissingGitWarning": true,
    "workbench.iconTheme": "vscode-icons",
    "vsicons.dontShowNewVersionMessage": true,
    "background.windowBackgrounds": [
        "d:/hatsune/wallpaper/**"
    ],
    "hediet.vscode-drawio.resizeImages": null,
    "editor.cursorBlinking": "solid",
    "background.backgroundOpacity": [
        0.95,
        0.1,
        0.1,
        0.1
    ],
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "cmake.showOptionsMovedNotification": false,
    "workbench.editorAssociations": {
        "{git,gitlens}:/**/*.{md,csv,svg}": "default"
    },
    "remote.autoForwardPortsSource": "hybrid",
    "git.openRepositoryInParentFolders": "always",
    "background.useInvertedOpacity": true,
    "breadcrumbs.enabled": false,
    "editor.renderWhitespace": "all",
    "workbench.colorTheme": "paddy-ultramarine",
    "editor.lineNumbers": "relative",
    "vim.leader": "<Space>",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        //nice to have
        {
            "before": [
                "leader",
                "w"
            ],
            "commands": [
                ":w!"
            ]
        },
        {
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                ":q!"
            ]
        },
        {
            "before": [
                "leader",
                "x"
            ],
            "commands": [
                ":x!"
            ]
        },
        //navigation and file tree
        {
            "before": [
                "leader",
                "e"
            ],
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ]
        },
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "leader",
                "p"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        //for commenting lines
        {
            "before": [
                "leader",
                "c"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        // to switch between editor tabs
        {
            "before": [
                "leader",
                "l"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ],
        },
        {
            "before": [
                "leader",
                "h"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ],
        },
        // to center everytime i use pg up and dn
        {
            "before": [
                "c-d"
            ],
            "after": [
                "M",
                "c-d"
            ]
        },
        {
            "before": [
                "c-u"
            ],
            "after": [
                "M",
                "c-u",
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        //move selected lines while being in visual mode
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        //for indenting and unindenting
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        // for comments in visual mode 
        {
            "before": [
                "leader",
                "c"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
    ]
}